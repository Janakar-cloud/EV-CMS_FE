# ================================
# STAGING ENVIRONMENT VARIABLES
# ================================

# API Configuration - Use your staging API URL
API_URL=https://api-staging.yourcompany.com/api/v1
OCPP_API_URL=https://ocpp-staging.yourcompany.com

# Google Maps API Key (Required for location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket URL (Optional - defaults to API URL)
WS_URL=wss://api-staging.yourcompany.com

# App Configuration
APP_NAME=EV CMS Brand Admin (Staging)
APP_VERSION=1.0.0

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.5
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Analytics (Optional)
ANALYTICS_ID=your_staging_analytics_id

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_BETA_FEATURES=true

# Security
CSP_ENABLED=true
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MS=900000

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=staging-alerts@yourcompany.com
