# ================================
# STAGING ENVIRONMENT VARIABLES
# ================================

# API Configuration - Use your staging API URL
NEXT_PUBLIC_API_URL=https://api-staging.yourcompany.com/api/v1
NEXT_PUBLIC_OCPP_API_URL=https://ocpp-staging.yourcompany.com

# Google Maps API Key (Required for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket URL (Optional - defaults to API URL)
NEXT_PUBLIC_WS_URL=wss://api-staging.yourcompany.com

# App Configuration
NEXT_PUBLIC_APP_NAME=EV CMS Brand Admin (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=staging
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.5
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.5
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_staging_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MS=900000

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=staging-alerts@yourcompany.com
