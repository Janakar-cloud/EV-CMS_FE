# ================================
# FRONTEND ENVIRONMENT VARIABLES
# ================================

# API Configuration
API_URL=http://localhost:5000/api/v1
OCPP_API_URL=http://localhost:8080

# Google Maps API Key (Required for location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket URL (Optional - defaults to API URL)
WS_URL=ws://localhost:5000

# App Configuration
APP_NAME=EV CMS Brand Admin
APP_VERSION=1.0.0

# ================================
# BACKEND ENVIRONMENT VARIABLES
# (Only needed if running full stack locally)
# ================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ev_cms

# Authentication
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# External Services - Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret

# OpenAI / LLM Configuration
# Set the API key for any backend services that call an LLM provider
OPENAI_API_KEY=your-openai-api-key-here
# Default model used by services/clients when not overridden
OPENAI_MODEL=gpt-5-mini

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-app-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# OCPP Configuration
OCPP_VERSION=1.6
OCPP_PORT=8080

# Node Environment
NODE_ENV=development