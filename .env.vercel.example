# Vercel Environment Variables Template
# Copy and paste these into Vercel Project Settings â†’ Environment Variables

# API Configuration (REQUIRED - Update with your actual backend URLs)
NEXT_PUBLIC_API_URL=https://api.ev-cms.com/api/v1
NEXT_PUBLIC_OCPP_API_URL=https://ocpp.ev-cms.com
NEXT_PUBLIC_WS_URL=wss://api.ev-cms.com

# Google Maps (REQUIRED - Get from Google Cloud Console)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_actual_google_maps_api_key_here

# Sentry Error Tracking (OPTIONAL but recommended for production)
NEXT_PUBLIC_SENTRY_DSN=your_actual_sentry_dsn_here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# App Configuration
NEXT_PUBLIC_APP_NAME=EV CMS Brand Admin
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourproduction.com

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
