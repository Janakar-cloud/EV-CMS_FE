# Vercel Environment Variables Template
# Copy and paste these into Vercel Project Settings â†’ Environment Variables

# API Configuration (REQUIRED - Update with your actual backend URLs)
API_URL=https://www.fluxenergy.org/api/v1
OCPP_API_URL=ws://3.108.74.82:8080/ocpp
WS_URL=https://www.fluxenergy.org

# Google Maps (REQUIRED - Get from Google Cloud Console)
GOOGLE_MAPS_API_KEY=your_actual_google_maps_api_key_here

# Sentry Error Tracking (OPTIONAL but recommended for production)
SENTRY_DSN=your_actual_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# App Configuration
APP_NAME=EV CMS Brand Admin
APP_VERSION=1.0.0

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_BETA_FEATURES=false

# Security
CSP_ENABLED=true
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourproduction.com

# Analytics (Optional)
ANALYTICS_ID=your_analytics_id_here
