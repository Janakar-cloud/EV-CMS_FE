# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================

# API Configuration - Use your production API URL
NEXT_PUBLIC_API_URL=https://api.ev-cms.com/api/v1
NEXT_PUBLIC_OCPP_API_URL=https://ocpp.ev-cms.com

# Google Maps API Key (Required for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyDYcwAA8BXLXNkh7YcH1H_XJVJQ3XJQ3XQ

# WebSocket URL (Optional - defaults to API URL)
NEXT_PUBLIC_WS_URL=wss://api.ev-cms.com

# App Configuration
NEXT_PUBLIC_APP_NAME=EV CMS Brand Admin
NEXT_PUBLIC_APP_VERSION=1.0.0

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourproduction.com
